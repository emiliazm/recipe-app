<div class="food-item" id="<%= dom_id food %>">
  <p>
    <h3>Name: <%= food.name %></h3>
  </p>
  <div class="food-details">
    <p>
      <strong>Measurement unit: <%= food.measurement_unit %></strong>
    </p>

    <p>
      <strong>Unit Price: $<%= food.price %></strong>
    </p>
  </div>
  <div class ="food-actions">
    <% if can? :destroy, food %>
      <%if food.recipe_foods.exists? %>
        <p>You cannot delete a food that is used for a recipe.</p>
      <% else %>
        <p>
          <strong>Actions</strong>
          <%= button_to "Delete", user_food_path(food.user_id, food), method: :delete %>
        </p>
      <% end %>
    <% end %>
  </div>

</div>

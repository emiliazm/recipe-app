<div>
  <h1>Shopping List</h1>

  <p>
    <strong>Amount of food / items to buy: </strong>
    <%= @foods.length %>
  </p>

  <p>
    <strong>Total value of food: </strong>
    <%= @foods.sum{ |food| food.price * food.recipe_foods.sum(:quantity) } %>
  </p>

  <div>
    <div>
      <p>Food</p>
      <p>Quantity</p>
      <p>Price </p>
    </div>
    <div>
      <% if @foods.length === 0 %>
        <p>No food</p>
      <% else %>
        <% @foods.each do |food| %>
          <li>
            <%= food.name %>
            <%= food.recipe_foods.sum(:quantity) %>
            <%= food.price * food.recipe_foods.sum(:quantity) %>
          </li>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


